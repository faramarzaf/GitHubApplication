<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.android.githubservice">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".GithubApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_app_foreground"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_app_foreground"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity android:name=".ui.activity.ActivitySplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.activity.LoginActivity" />
        <activity android:name=".ui.activity.MainActivity"
            android:configChanges="orientation|screenSize"
            />
    </application>

</manifest>